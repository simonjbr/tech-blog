{{ log blog }}
<div class="card">
	<div class="card-header bg-secondary">
		<h5 class="card-title">{{blog.title}}</h5>
		<h6 class="card-subtitle mb-2 text-body-secondary">Posted by {{blog.user.username}}
			on {{format_date blog.date_created}}</h6>
	</div>
	<div class="card-body">
		<p class="card-text">{{blog.content}}</p>
	</div>
</div>
<h4 class="subtitle">Comments</h4>
<ul class="list-group">
	{{#each blog.comments as |comment|}}
	<li class="list-group-item">
		<div class="card">
			<div class="card-body">
				<p class="card-text">{{comment.content}}</p>
				<p class="subtitle">By {{comment.user.username}} on {{format_date comment.date_created}}</p>
			</div>
		</div>
	</li>
	{{/each}}
</ul>
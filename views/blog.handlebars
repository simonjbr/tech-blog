<div class="card">
	<div class="card-header bg-secondary">
		<h5 class="card-title">{{blog.title}}</h5>
		<h6 class="card-subtitle mb-2 text-body-secondary">Posted by {{blog.user.username}}
			on {{format_date blog.date_created}}</h6>
	</div>
	<div class="card-body">
		<p class="card-text">{{blog.content}}</p>
	</div>
</div>
<h4 class="subtitle">Comments</h4>
<ul class="list-group">
	{{#each blog.comments as |comment|}}
	<li class="list-group-item">
		<div class="card">
			<div class="card-body">
				<p class="card-text">{{comment.content}}</p>
				<p class="subtitle">By {{comment.user.username}} on {{format_date comment.date_created}}</p>
			</div>
		</div>
	</li>
	{{/each}}
</ul>
{{!-- create new comment form --}}
<form class="mx-4" id="comment-form">
	{{!-- <h3 class="subtitle">Add Comment</h3> --}}
	<div class="mb-3">
		<label for="comment-input" class="form-label">Add Comment</label>
		<input type="text" class="form-control" id="comment-input" data-blog-id="{{blog.id}}"
			data-user-id="{{user_id}}">
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
<script src="/js/comment.js"></script>
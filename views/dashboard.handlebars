{{!-- {{ log blogs }} --}}
<ul class="list-group">
	{{#each blogs as |blog|}}
	<li class="list-group-item">
		<a href="/api/blogs/edit/{{id}}" class="link-underline link-underline-opacity-0">
			<div class="card">
				<div class="card-header bg-secondary">
					<h5 class="card-title">{{title}}</h5>
					<h6 class="card-subtitle mb-2 text-body-secondary">Posted by {{user.username}}
						on {{format_date date_created}}</h6>
				</div>
				<div class="card-body">
					<p class="card-text">{{content}}</p>
				</div>
			</div>
		</a>
	</li>
	{{/each}}
</ul>
<div class="container text-center my-2">
	<a href="/createBlog">
		<button class="btn btn-primary">Add New Blog</button>
	</a>
</div>